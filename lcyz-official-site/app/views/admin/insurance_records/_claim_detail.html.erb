<% field_name = "insurance_record[claims_details][]" %>
<div class="claim-detail-form clearfix">
  <div class="col-sm-10">
    <div class="form-group">
        <label class="col-sm-2 control-label">记录日期：</label>
        <div class="col-sm-4">
          <% claim_date = detail["ClaimDate"].presence || detail["claim_date"] %>
          <%= form.text_field :claim_date, value: claim_date, class: "form-control", name: "#{field_name}[claim_date]" %>
        </div>

        <label class="col-sm-2 control-label">事故损失：</label>
        <div class="col-sm-4">
          <% labor_fee = detail["LaborFee"].presence || detail["lobor_fee"] %>
          <%= form.text_field :lobor_fee, value: labor_fee, class: "form-control", name: "#{field_name}[lobor_fee]", placeholder: "元" %>
        </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">事故类型：</label>
      <div class="col-sm-4">
        <% accident_type = detail["AccidentType"].presence || detail["accident_type"] %>
        <%= form.text_field :accident_type, value: accident_type, class: "form-control", name: "#{field_name}[accident_type]" %>
      </div>

      <label class="col-sm-2 control-label">事故经过：</label>
      <div class="col-sm-4">
        <% description = detail["Description"].presence || detail["description"] %>
        <%= form.text_field :description, value: description, class: "form-control", name: "#{field_name}[description]" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">维修内容：</label>
      <div class="col-sm-10">
        <% repair_detail = detail['RepairDetail'].presence || detail["repair_detail"] %>
        <%= form.text_field :repair_detail, value: repair_detail, class: "form-control", name: "#{field_name}[repair_detail]" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">更换配件：</label>
      <div class="col-sm-10">
        <% material = detail['Material']&.keys&.join('') || detail["material"] %>
        <%= form.text_field :material, value: material, class: "form-control", name: "#{field_name}[material]" %>
      </div>
    </div>
  </div>

  <div class="col-sm-2">
    <button type="button" class="btn btn-info delete-claim-detail-btn">删除</button>
  </div>
</div>
