<h1>编辑品牌</h1>
<div class="ui segment">
  <%= form_for :brand,
    url: brand_path(@brand["_id"]), method: :patch,
    html: { class: "ui form" } do |f|
  %>
    <div class="field">
      <label>品牌</label>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <label>首字母</label>
      <%= f.text_field :first_letter %>
    </div>
    <div class="field">
      <label>编码</label>
      <%= f.text_field :code %>
    </div>
    <button type="submit" class="ui positive right labeled icon button">
      保存
      <i class="checkmark icon"></i>
    </button>
  <% end %>
</div>
