<h1>后台操作日志</h1>

<div class="ui segment">
  <table class="ui celled table">
    <thead>
      <tr>
        <th> 操作人 </th>
        <th> 操作时间 </th>
        <th> 操作记录 </th>
      </tr>
    </thead>
    <tbody>
      <% @operation_records.each do |record| %>
        <%= render partial: "row", locals: { record: record } %>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">
          共 <%=@counter%> 条记录
          <%= paginate @operation_records %>
        </th>
    </tfoot>
  </table>
</div>
