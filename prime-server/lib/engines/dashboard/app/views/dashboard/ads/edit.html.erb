<h1>编辑广告</h1>
<div class="ui segment">
  <%= form_for :ad,
    url: ad_path(@ad), method: :patch,
    html: { class: "ui form" } do |f|
  %>
    <div class="field">
      <label>标题</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label>图片地址</label>
      <%= f.text_field :image_url %>
    </div>
    <div class="field">
      <label>跳转地址</label>
      <%= f.text_field :redirect_url %>
    </div>
    <div class="field">
      <label>显示时长(秒)</label>
      <%= f.text_field :show_seconds %>
    </div>
    <div class="field">
      <label>状态</label>
      <%= f.select :state,
        [ ["启用", "enabled"], ["禁用", "disabled"] ],
        {}, { class: "ui search dropdown" }
      %>
    </div>
    <button type="submit" class="ui positive right labeled icon button">
      保存
      <i class="checkmark icon"></i>
    </button>
  <% end %>
</div>
