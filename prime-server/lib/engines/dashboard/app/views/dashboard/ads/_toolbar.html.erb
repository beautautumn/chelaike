<div class="ui grid">
  <div class="ui wide column">
    <div class="ui action input">
      <%= form_tag ads_path, method: :get do %>
        <%= text_field_tag "q[title_cont]",
            nil, placeholder: "搜索 标题"
        %>
        <%= submit_tag "搜索", class: "ui green basic button" %>
      <% end %>
    </div>
    <button id="ad-new-button" class="ui right floated teal button">
      增加新广告
    </button>
      <div id="ad-new-modal" class="ui modal">
        <i class="close icon"></i>
        <div class="header">
          增加新广告
        </div>
        <div class="content">
          <%= form_for :ad, html: { class: "ui form" } do |f| %>
            <div class="field">
              <label>标题</label>
              <%= f.text_field :title %>
            </div>
            <div class="field">
              <label>图片地址</label>
              <%= f.text_field :image_url %>
            </div>
            <div class="field">
              <label>跳转地址</label>
              <%= f.text_field :redirect_url %>
            </div>
            <button type="submit" class="ui positive right labeled icon button">
              保存
              <i class="checkmark icon"></i>
            </button>
            <div id="cancel-button" class="ui black deny button">
              取消
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
