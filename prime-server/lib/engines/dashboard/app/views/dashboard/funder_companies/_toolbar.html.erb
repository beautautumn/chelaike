<div class="ui grid">
  <div class="ui wide column">
    <button id="funder-company-new-button" class="ui right floated teal button">
      增加资金方
    </button>
      <div id="funder-company-new-modal" class="ui modal">
        <i class="close icon"></i>
        <div class="header">
          增加资金方
        </div>
        <div class="content">
          <%= form_for :funder_company, html: { class: "ui form" } do |f| %>
            <div class="required field">
              <label>名称</label>
              <%= f.text_field :name %>
            </div>
            <button type="submit" class="ui positive right labeled icon button">
              保存
              <i class="checkmark icon"></i>
            </button>
            <div class="ui black deny button">
              取消
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
