<h1>分配服务顾问</h1>
<div class="ui segment">
  <%= form_for @relationship,
    url: statistic_path(id: @relationship.company_id), method: :patch,
    html: { class: "ui form" } do |f|
  %>
    <div class="field">
      <label>服务顾问</label>
      <%= f.select :staff_id,
        Dashboard::Staff.consultants.collect { |s| [s.name, s.id] },
        { include_blank: true },
        { id: "statstics-edit-staff-select", class: "ui search dropdown" }
      %>
    </div>
    <button type="submit" class="ui positive right labeled icon button">
      保存
      <i class="checkmark icon"></i>
    </button>
  <% end %>
</div>
