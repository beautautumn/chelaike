<h1>在库车辆列表</h1>

<div class="ui segment">
  <%= render partial: "toolbar" %>
  <table class="ui celled table">
    <thead>
      <tr>
        <th>库存ID</th>
        <th width="8%"> 地区 </th>
        <th width="14%"> 车辆名称 </th>
        <th width="12%"> 基本信息 </th>
        <th width="6%"> 收购价 </th>
        <th width="6%"> 标价 </th>
        <th width="8%"> 销售底价 </th>
        <th width="8%"> 经理底价 </th>
        <th width="10%"> 入库 </th>
        <th width="8%"> 库龄 </th>
        <th width="12%"> 车商 </th>
        <th width="8%"> 收购员 </th>
      </tr>
    </thead>
    <tbody>
      <% @cars.each do |c| %>
        <%= render partial: "row", locals: { car: c } %>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="12">
          共 <%=@counter%> 条记录
          <%= paginate @cars %>
        </th>
    </tfoot>
  </table>
</div>
