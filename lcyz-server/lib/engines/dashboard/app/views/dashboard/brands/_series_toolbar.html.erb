<div class="ui grid">
  <div class="ui wide column">
    <div class="ui action input">
      <%= form_tag brand_path(@brand['_id']), method: :get do %>
        <%= text_field_tag "q[name]",
            nil, placeholder: "搜索 车系"
        %>
        <%= submit_tag "搜索", class: "ui green basic button" %>
      <% end %>
    </div>
    <button id="series-new-button" class="ui right floated teal button">
      增加新车系
    </button>
      <div id="series-new-modal" class="ui modal">
        <i class="close icon"></i>
        <div class="header">
          增加新车系
        </div>
        <div class="content">
          <%= form_for :series, url: { controller: :series, action: "create" }, html: { class: "ui form" } do |f| %>
            <div class="required field">
              <label>车系</label>
              <%= f.text_field :name %>
            </div>
            <div class="field">
              <label>厂商</label>
              <%= f.text_field :manufacturer %>
            </div>
            <div class="field">
              <label>编码</label>
              <%= f.text_field :code %>
            </div>
            <%= f.hidden_field :brand_code, value: @brand['code'] %>
            <%= f.hidden_field :brand_id, value: @brand['_id'] %>
            <button type="submit" class="ui positive right labeled icon button">
              保存
              <i class="checkmark icon"></i>
            </button>
            <div class="ui black deny button">
              取消
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
