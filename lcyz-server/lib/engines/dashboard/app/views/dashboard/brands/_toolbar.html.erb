<div class="ui grid">
  <div class="ui wide column">
    <div class="ui action input">
      <%= form_tag brands_path, method: :get do %>
        <%= text_field_tag "q[name]",
            nil, placeholder: "搜索 品牌"
        %>
        <%= submit_tag "搜索", class: "ui green basic button" %>
      <% end %>
    </div>
    <button id="brand-new-button" class="ui right floated teal button">
      增加新品牌
    </button>
      <div id="brand-new-modal" class="ui modal">
        <i class="close icon"></i>
        <div class="header">
          增加新品牌
        </div>
        <div class="content">
          <%= form_for :brand, html: { class: "ui form" } do |f| %>
            <div class="required field">
              <label>品牌</label>
              <%= f.text_field :name %>
            </div>
            <div class="field">
              <label>首字母</label>
              <%= f.text_field :first_letter %>
            </div>
            <div class="field">
              <label>编码</label>
              <%= f.text_field :code %>
            </div>
            <button type="submit" class="ui positive right labeled icon button">
              保存
              <i class="checkmark icon"></i>
            </button>
            <div class="ui black deny button">
              取消
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
