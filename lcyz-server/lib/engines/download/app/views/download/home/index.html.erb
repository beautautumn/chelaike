<div class="logo">
  <%= image_tag current_app.logo %>
</div>
<h1 class="slogan">
  <%= current_app.slogan %>
</h1>
<div class="download">
  <% if ios? %>
    <%= link_to "下载安装", ios_link(@latest_version),  class: "link" %>
  <% elsif android? %>
    <%= link_to "下载安装", @latest_version.android_source,  class: "link" %>
  <% else %>
    <div class="downloads">
      <div class="app">
        <div class="appBox">
          <div class="appIcon">
            <%= image_tag qrcode("http://#{current_app.domain}"), class: "appImage" %>
          </div>
          <p class="boxText">下载手机版本</p>
        </div>
      </div>
      <div class="desktop">
        <div class="desktopBox">
          <div class="icon">
            <%= link_to current_app.pc_url do %>
              <%= image_tag "download/desktop.png" %>
            <% end %>
          </div>
          <p class="boxText">使用电脑版本</p>
        </div>
      </div>
    </div>
  <% end %>
</div>
<% if current_app.name == "车来客" %>
  <p class="rename">车三宝已正式更名为车来客</p>
<% end %>
