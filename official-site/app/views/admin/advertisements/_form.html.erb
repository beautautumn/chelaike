<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for([:admin, @advertisement], :html => { :role => "form" }) do |f| %>
        <% if @advertisement.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
            <h4><%= @advertisement.errors.count %>个错误</h4>
            <ul>
            <% @advertisement.errors.full_messages.each do |msg| %>
              <li><% msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <%= f.hidden_field :platform, value: @advertisement.platform || params[:platform] %>
        <div class="form-group">
          <%= f.label "图片" %>
          <%= f.file_field :image_url, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "广告类型" %> <br>
          <%= f.select(:ad_type, ["level_1", "level_2"]) %>
        </div>
        <div class="form-group">
          <%= f.label "链接" %>
          <%= f.text_field :link, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "保存", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
