<% content_for :content_header  do %>
  <section class="content-header">
    <h1>站点设置</h1>
    <ol class="breadcrumb">
      <li><a href="/admin"><i class="fa fa-dashboard"></i>首页</a></li>
      <li class="active"><%= link_to "网站设置", admin_tenant_path %></li>
      <li class="active">SEO设置</li>
    </ol>
  </section>
<% end %>

<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for(
        [:admin, @tenant, @site_configuration],
        url: admin_tenant_site_configuration_path(@tenant, @site_configuration),
        method: :patch,
        html: { role: "form" }
      ) do |f| %>
        <% if @site_configuration.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
            <h4><%= @site_configuration.errors.count %>个错误</h4>
            <ul>
            <% @site_configuration.errors.full_messages.each do |msg| %>
              <li><% msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label "Title" %>
          <div class="row">
            <div class="col-xs-8">
              <%= f.text_field :title, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "Keyword" %>
          <div class="row">
            <div class="col-xs-8">
              <%= f.text_field :keyword, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "Description" %>
          <div class="row">
            <div class="col-xs-8">
              <%= f.text_field :description, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "ICP" %>
          <div class="row">
            <div class="col-xs-8">
              <%= f.text_field :icp, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "统计脚本" %>
          <div class="row">
            <div class="col-xs-8">
              <%= f.text_area :statistics_code, class: "form-control", rows: 6 %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "ICON（建议分辨率 48*48）" %>
          <div class="row">
            <div class="col-xs-8">
              <%= f.file_field :icon, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "logo（建议分辨率 238*50）" %>
          <div class="row">
            <div class="col-xs-8">
              <%= f.file_field :logo, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "slogan（建议分辨率 250*50）" %>
          <div class="row">
            <div class="col-xs-8">
              <%= f.file_field :slogan, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.submit "保存", class: "btn btn-primary" %>
          <%= link_to "返回", admin_tenant_path, class: "btn btn-default btn-sub-page-back" %>
        </div>
        <% end %>
    </div>
  </div>
</section>
